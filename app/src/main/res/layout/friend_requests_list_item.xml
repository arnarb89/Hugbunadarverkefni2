<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout   xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="55dip"
    android:layout_width="fill_parent"

    android:paddingLeft="0dip"
    android:paddingRight="0dip"

    android:layout_marginTop="10dip"
    android:layout_marginBottom="10dip"

    android:orientation="horizontal"
    android:gravity="center_vertical"

    android:descendantFocusability="blocksDescendants">

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/friendRequestNameField"

        android:textColor="@color/white"
        android:background="@color/transparent"
        android:textSize="15dip"

        android:layout_height="40dip"
        android:layout_width="wrap_content"

        android:layout_alignParentLeft="true"
        android:gravity="left|center_vertical"

        android:text="Jonni KÃ¡ri"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        android:background="@color/transparent">

        <Button android:id="@+id/acceptFriendRequestButton"
            android:textColor="@color/darkgreen"
            android:textSize="13dip"

            android:padding="0dip"

            android:focusable="true"
            android:focusableInTouchMode="true"

            android:layout_width="70dip"
            android:layout_height="40dip"
            android:text="Accept"
            android:background="@drawable/accept_friend_request_button"/>

        <Space
            android:layout_width="10dip"
            android:layout_height="1dip"
             >
        </Space>

        <Button android:id="@+id/declineFriendRequestButton"
            android:textColor="@color/darkred"
            android:textSize="13dip"

            android:padding="0dip"
            android:layout_marginLeft="0dip"

            android:focusable="true"
            android:focusableInTouchMode="true"

            android:layout_width="70dip"
            android:layout_height="40dip"
            android:text="Decline"
            android:background="@drawable/decline_friend_request_button"/>

    </LinearLayout>

</RelativeLayout>